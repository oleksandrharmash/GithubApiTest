platform :ios, '11.0'

target 'GithubApiSample' do
    use_frameworks!
    inhibit_all_warnings!

    # Bottom messages
    pod 'Toast-Swift', '~> 5.0.0'

    #Hud
    pod 'JGProgressHUD'

    #Network
    pod 'Alamofire', '~> 4.8'
    pod 'AlamofireImage', '~> 3.5'
    pod 'AlamofireNetworkActivityIndicator', '~> 2.4'

    pod 'AlamofireNetworkActivityLogger', '~> 2.4', :configurations => ['Development']

    #TableView - related
    pod 'UIScrollView-InfiniteScroll', '~> 1.1.0'
    pod 'DZNEmptyDataSet'
    
  target 'GithubApiSampleTests' do
    inherit! :search_paths
    # Pods for testing
  end

end
